<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/activity_userlogin_drawer_layout"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_userlogin_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_userlogin_container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_userlogin_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
                app:theme="@style/Toolbar.White">

                <RelativeLayout style="@style/ActionBar.Background"
                                android:layout_width="fill_parent"
                                android:layout_height="?android:actionBarSize"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"

                                android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/activity_userlogin_status_bar_back_layout"
                        style="@style/ActionBar.Background"
                        android:layout_width="?android:actionBarSize"
                        android:layout_height="?android:actionBarSize"
                        android:clickable="true"
                        android:filterTouchesWhenObscured="true"
                        android:gravity="center_vertical|start">

                        <ImageButton
                            android:id="@+id/activity_userlogin_status_bar_back"
                            style="@style/ActionBar.Image.Menu"
                            android:contentDescription="@string/str_activity_userlogin_back_description"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/activity_userlogin_header_title"
                        style="@style/ActionBar.Title"
                        android:layout_width="match_parent"
                        android:layout_height="?android:actionBarSize"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/str_actionbar_project_title"/>

                    <RelativeLayout
                        android:id="@+id/activity_userlogin_status_bar_more_layout"
                        style="@style/ActionBar.Background"
                        android:layout_width="wrap_content"
                        android:layout_height="?android:actionBarSize"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:filterTouchesWhenObscured="true">

                        <TextView
                            android:id="@+id/activity_userlogin_status_bar_more"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@drawable/selector_status_bar_more_text"
                            android:text="@string/str_activity_userlogin_more"/>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/activity_userlogin_container_body"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
