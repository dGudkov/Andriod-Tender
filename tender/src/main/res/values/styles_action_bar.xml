<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBar.Background" parent="android:TextAppearance.Holo">
        <item name="android:background">@color/clr_actionbar_white_background</item>
    </style>

    <style name="ActionBar.Field" parent="ActionBar.Background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ActionBar.Image" parent="ActionBar.Field">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">?android:actionBarSize</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ActionBar.Image.Menu" parent="ActionBar.Image">
        <item name="android:contentDescription">Menu</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

    <style name="ActionBar.Title" parent="ActionBar.Field">
        <item name="android:textColor">@color/clr_actionbar_white_title</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>