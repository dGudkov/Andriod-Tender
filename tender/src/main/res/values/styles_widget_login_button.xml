<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.LoginButton.Layout" parent="Fragment.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_widget_login_button</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="Widget.LoginButton.Text" parent="Fragment.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/selector_widget_login_button_text</item>

    </style>

</resources>