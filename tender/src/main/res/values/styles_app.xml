<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==============================================  -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Toolbar.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/clr_actionbar_white_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_white_dark_background</item>
        <item name="colorAccent">@color/clr_actionbar_white_accent_background</item>
    </style>

    <style name="AppTheme.Toolbar.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/clr_actionbar_white_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_white_dark_background</item>
        <item name="colorAccent">@color/clr_actionbar_white_accent_background</item>
    </style>

    <style name="Toolbar.White" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/clr_actionbar_white_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_white_dark_background</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Toolbar.Blue" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/clr_actionbar_blue_background</item>
        <item name="colorPrimaryDark">@color/clr_actionbar_blue_dark_background</item>
        <item name="colorAccent">@color/clr_actionbar_blue_accent_background</item>
        <item name="android:background">@drawable/action_bar_background_blue</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>